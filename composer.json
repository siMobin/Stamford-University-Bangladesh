{
    "require-dev": {
        "php": ">=8.2.12",
        "ext-curl": "*",
        "ext-fileinfo": "*",
        "ext-gd": "*",
        "ext-mbstring": "*",
        "ext-openssl": "*",
        "ext-pdo_sqlsrv": ">=5.11",
        "ext-sqlsrv": ">=5.11",
        "ext-zip": ">=1.21.1",
        "composer": ">=2.6.5",
        "monolog/monolog": "^3.5",
        "phpstan/phpstan": "^1.10.50"
    },
    "require": {
        "erusev/parsedown": "^1.7",
        "erusev/parsedown-extra": "^0.8.1",
        "intervention/image": "^3.1",
        "phpmailer/phpmailer": "^6.8",
        "phpoffice/phpspreadsheet": "^2.0",
        "phpoffice/phpword": "^1.1",
        "tecnickcom/tcpdf": "^6.6",
        "vlucas/phpdotenv": "^5.6"
    },
    "scripts": {
        "server": "php -S localhost:80\u000D",
        "test": "npm test",
        "start": [
            "npm install",
            "@composer install",
            "npm run compile:sass",
            "php -S localhost:80\u000D"
        ]
    },
    "scripts-descriptions": {
        "server": "Host PHP in dev server --localhost"
    },
    "config": {
        "platform-check": true,
        "process-timeout": 0,
        "cache-dir": "./cache/",
        "cache-files-dir": "./cache/files/",
        "cache-files-maxsize": "47.6837158MiB",
        "cache-files-ttl": 604800,
        "optimize-autoloader": true,
        "sort-packages": true
    }
}